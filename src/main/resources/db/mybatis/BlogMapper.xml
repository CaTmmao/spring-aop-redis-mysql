<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BlogMapper">
    <select id="selectForm" resultMap="resultForm">
        select  goods.name as goods_name, sum(price*quantity) as total_price
        from `order`
                 right join goods
                            on `order`.goods_id = goods.id
        group by goods.id
        order by total_price desc;
    </select>

    <resultMap id="resultForm" type="com.github.hcsp.entity.RankItem">
        <result property="price" column="total_price"/>
        <association property="goods" javaType="com.github.hcsp.entity.Goods">
            <result property="id" column="goods_id"/>
            <result property="name" column="goods_name"/>
        </association>
    </resultMap>
</mapper>